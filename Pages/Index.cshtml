@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<center><img src="images/logo.png" width="600" /></center>

<table class="table">
    <thread>
        <tr>
            <th>From</th>
            <th>Subject</th>
            <th>Date/Time</th>
            <th>Delete</th>
        </tr>
    </thread>

    <tbody>
        @foreach (var item in Model.listEmails)
        {
            <tr>
                <td>@item.EmailSender</td>
                <td>
                    @if (item.EmailIsRead.Equals("0")) {
                        <img src="images/yellow.gif" height="10pt"> 
                    } 
                    <a href="ReadEmail?emailid=@item.EmailID">@item.EmailSubject</a></td>
                <td>@item.EmailDate</td>
                <td>
 
                        <a class="btn btn-primary btn-sm" 
                           href="javascript:void(0);" 
                           onclick="confirmDelete('@item.EmailID')">Delete
                       </a>


                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    function confirmDelete(emailID) {
        if (confirm("Are you sure you want to delete this email?")) {
            window.location.href = `/DeleteEmail?id=${emailID}`;
        }
    }
</script>
