@page
@model FinalProject.Pages.ComposeemailModel
@{
    ViewData["Title"] = "Compose Email";
}

<h3>@ViewData["Title"]</h3>

<form id="compose" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <table>
        <tr>
            <td>Email</td>
            <td>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form" autocomplete="Email" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </td>
        </tr>
        <tr>
            <td>Subject</td>
            <td>
                <div class="form-floating">
                    <input asp-for="Input.Subject" class="form" autocomplete="Subject" aria-required="true" />
                    <span asp-validation-for="Input.Subject" class="text-danger"></span>
                </div>
            </td>
        </tr>
        <tr>
            <td>Massage</td>
            <td>
                <div class="form-floating">
                    <input asp-for="Input.Massage" class="form" autocomplete="Massage" aria-required="true" />
                    <span asp-validation-for="Input.Massage" class="text-danger"></span>
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <button id="send-submit" type="submit" class="btn btn-primary">Send</button>
            </td>
        </tr>
    </table>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
